{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "typeRoots": ["node_modules/@types"],
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
