{
  "name": "wxparcel-script",
  "version": "2.0.0-alpha.0.0",
  "license": "MIT",
  "bin": "./bin/cli",
  "main": "./libs/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/wxparcel/wxparcel-script.git"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "docs:used": "cpx './README.md' ./documents && cpx './documents/.nojekyll' ./gh-pages && cpx './documents/**/*' ./gh-pages",
    "docs:used:server": "concurrently \"cpx './README.md' ./documents --watch\" \"docsify serve ./documents\"",
    "docs": "concurrently \"npm run docs:used\"",
    "gh-pages": "rimraf gh-pages && npm run docs",
    "yamllint": "yamllint ./*.yml",
    "tslint": "tslint --project ./src --fix",
    "lint": "npm run yamllint && npm run tslint",
    "test": "npm run lint",
    "develop": "rimraf ./libs && concurrently \"tsc --project ./src --outDir ./libs --declaration --watch\" \"cpx 'src/**/{*.handlebars,.babelrc}' ./libs --watch --verbose\"",
    "release": "rimraf ./libs && cpx 'src/**/{*.handlebars,.babelrc}' ./libs --verbose && tsc --project ./src --outDir ./libs --declaration",
    "start": "npm run develop"
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/register": "^7.5.5",
    "chalk": "^2.4.1",
    "chokidar": "^2.0.4",
    "columnify": "^1.5.4",
    "commander": "^2.16.0",
    "decomment": "^0.9.2",
    "finalhandler": "^1.1.1",
    "fs-extra": "^6.0.1",
    "ip": "^1.1.5",
    "ip-port-regex": "^2.0.0",
    "lodash": "^4.17.10",
    "loose-envify": "^1.4.0",
    "minimatch": "^3.0.4",
    "node-sass": "^4.9.2",
    "portscanner": "^2.2.0",
    "pretty-error": "^2.1.1",
    "promise-waterfall": "^0.1.0",
    "serve-static": "^1.13.2",
    "source-map": "^0.7.3",
    "spritesheet-templates": "^10.2.3",
    "spritesmith": "^3.3.1",
    "strip-comment": "^1.1.3",
    "strip-css-comments": "^3.0.0",
    "uglify-es": "^3.3.9"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.2",
    "@types/finalhandler": "^1.1.0",
    "@types/fs-extra": "^8.0.0",
    "@types/ip": "^1.1.0",
    "@types/lodash": "^4.14.136",
    "@types/node": "^12.6.8",
    "@types/node-sass": "^4.11.0",
    "@types/portscanner": "^2.1.0",
    "@types/serve-static": "^1.13.2",
    "@types/uglify-es": "^3.0.0",
    "chai": "^4.1.2",
    "concurrently": "^4.0.1",
    "cpx": "^1.5.0",
    "docsify-cli": "^4.3.0",
    "lint-staged": "^9.2.0",
    "nyc": "^14.1.1",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.3",
    "yaml-lint": "^1.2.4"
  }
}
